
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can create their own document where the document ID matches their user ID
      allow create: if request.auth != null && request.auth.uid == request.resource.id;

      // A user can only read, update, or delete their own document
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
